<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_item_bank_verified"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_8ssp"
    android:layout_marginTop="@dimen/_8ssp"
    android:layout_marginRight="@dimen/_8ssp"
    android:layout_marginBottom="@dimen/_4sdp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:id="@+id/ll_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp">


        <ImageView
            android:id="@+id/iv_bank"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_kyc" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_8ssp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.mw.eleven11.customView.CustomTextView
                android:id="@+id/ctv_bank_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_bank_details_is_verified"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/primary_txt_size"
                app:textfont="r" />

            <com.mw.eleven11.customView.CustomTextView
                android:id="@+id/ctv_account_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_account_message"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/secondary_txt_size"
                app:textfont="r" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>