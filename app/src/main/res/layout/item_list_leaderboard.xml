<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hi_main_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_4sdp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_4sdp"
        android:paddingRight="@dimen/_4sdp">

        <com.mw.eleven11.customView.CustomImageView
            android:id="@+id/iv_player"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_default_bg"
            android:padding="@dimen/_1sdp"
            app:actualImageScaleType="fitCenter"
            app:failureImage="@drawable/ic_avtar"
            app:failureImageScaleType="fitCenter"
            app:placeholderImage="@drawable/ic_avtar"
            app:placeholderImageScaleType="fitCenter"
            app:roundAsCircle="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_8sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.mw.eleven11.customView.CustomTextView
                    android:id="@+id/ctv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/secondary_txt_size"
                    app:textfont="r" />

                <com.mw.eleven11.customView.CustomTextView
                    android:id="@+id/ctv_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/secondary_txt_size"
                    android:visibility="visible"
                    app:textfont="r" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical">

                <com.mw.eleven11.customView.CustomTextView
                    android:id="@+id/ctv_ranks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="--"
                    android:textColor="@color/white"
                    android:textSize="@dimen/secondary_txt_size"
                    app:textfont="r" />

                <com.mw.eleven11.customView.CustomTextView
                    android:maxWidth="@dimen/_200sdp"
                    android:id="@+id/ctv_winnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:textSize="@dimen/secondary_txt_size"
                    app:textfont="b" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>