<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hi_main_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_1sdp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/_1sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_4sdp"
        android:weightSum="100">


        <RelativeLayout
            android:id="@+id/rl_pic_root"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20">


            <com.mw.eleven11.customView.CustomImageView
                android:id="@+id/iv_player"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerInParent="true"
                app:actualImageScaleType="fitXY"
                app:failureImage="@drawable/player"
                app:failureImageScaleType="fitXY"
                app:placeholderImage="@drawable/player"
                app:placeholderImageScaleType="fitXY"
                app:roundAsCircle="true" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <com.mw.eleven11.customView.CustomTextView
                    app:textfont="r"
                    android:id="@+id/ctv_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_black_round_corner_r0"
                    android:gravity="center"
                    android:maxEms="4"
                    android:paddingLeft="@dimen/_4sdp"
                    android:paddingTop="@dimen/_1sdp"
                    android:paddingRight="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_1sdp"
                    android:text="IND"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_6sdp" />

                <com.mw.eleven11.customView.CustomTextView
                    app:textfont="r"
                    android:id="@+id/ctv_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_white_round_corner_r0"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_4sdp"
                    android:paddingTop="@dimen/_1sdp"
                    android:paddingRight="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_1sdp"
                    android:text="BAT"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_6sdp" />

            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.mw.eleven11.customView.CustomTextView
                app:textfont="r"
                android:id="@+id/ctv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="M S Dhoni"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/primary_txt_size" />

            <com.mw.eleven11.customView.CustomTextView
                app:textfont="r"
                android:id="@+id/ctv_credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="241"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/primary_txt_size" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_c_root"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical">

            <com.mw.eleven11.customView.CustomTextView
                app:textfont="r"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/ctv_caption"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:background="@drawable/circle_cap_vcap_inactive"
                android:gravity="center"
                android:text="C"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/secondary_txt_size" />

            <com.mw.eleven11.customView.CustomTextView
                app:textfont="r"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/ctv_cap_sel_per"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8.5%"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/primary_txt_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_vc_root"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="vertical">

            <com.mw.eleven11.customView.CustomTextView
                android:id="@+id/ctv_vice_caption"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:background="@drawable/circle_cap_vcap_inactive"
                android:gravity="center"
                android:text="VC"
                app:textfont="r"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/secondary_txt_size" />

            <com.mw.eleven11.customView.CustomTextView
                android:id="@+id/ctv_vcap_sel_per"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8.5%"
                app:textfont="r"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/primary_txt_size" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>