<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hi_main_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginLeft="@dimen/_4sdp"
    android:layout_marginRight="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:background="@color/white"
    android:elevation="@dimen/_1ssp"
    app:cardCornerRadius="@dimen/_8sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp">

            <com.mw.eleven11.customView.RobotoRegularTextView
                android:id="@+id/ctv_series_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toLeftOf="@+id/ctv_game_type"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:textAllCaps="true"
                app:textfont="r" />


            <com.mw.eleven11.customView.RobotoRegularTextView
                android:id="@+id/ctv_game_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/game_type_bg"
                android:elevation="@dimen/dimen_2dp"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimen_10dp"
                android:paddingRight="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_2dp"
                android:singleLine="true"
                android:text="Virtual Tournament"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:textAllCaps="true"
                app:textfont="@string/REGULAR" />

            <com.mw.eleven11.customView.RobotoRegularTextView
                android:id="@+id/ctv_match_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toRightOf="@+id/ctv_game_type"
                android:gravity="right"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:rd_enable="false"
                app:textfont="r" />
        </RelativeLayout>

       <!-- <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:background="@color/default_background" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:paddingLeft="@dimen/_10ssp"
            android:paddingRight="@dimen/_10ssp"
            android:weightSum="2">


            <com.mw.eleven11.customView.RobotoRegularTextView
                android:id="@+id/ctv_name_1_fn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="India"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:visibility="visible"
                android:textStyle="normal"
                app:textfont="r" />


            <com.mw.eleven11.customView.RobotoRegularTextView
                android:id="@+id/ctv_name_2_fn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Pakistan"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:visibility="visible"
                android:textStyle="normal"
                app:textfont="r" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_8sdp">


            <View
                android:id="@+id/view_left_wing"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_centerVertical="true"
                android:background="#2a4bd2" />


            <View
                android:id="@+id/view_right_wing"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#264868" />


            <LinearLayout
                android:id="@+id/linout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10ssp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.mw.eleven11.customView.CustomImageView
                    android:id="@+id/iv_team_1"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:background="@drawable/rounded_square_count"
                    app:actualImageScaleType="fitCenter"
                    app:failureImageScaleType="fitCenter"
                    app:placeholderImageScaleType="fitCenter" />

                <com.mw.eleven11.customView.RobotoRegularTextView
                    android:id="@+id/ctv_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:text="SA"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="visible"
                    app:textfont="b" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linout2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/linout3"
                android:layout_toLeftOf="@+id/linout3"
                android:layout_toEndOf="@+id/linout1"
                android:layout_toRightOf="@+id/linout1"
                android:gravity="center_vertical"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/time_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_time" />


                <com.mw.eleven11.customView.RobotoRegularTextView
                    android:id="@+id/ctv_timer"
                    style="@style/rippleStyleTransparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:drawablePadding="@dimen/margin_5"
                    android:padding="5dp"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    app:rd_enable="false"
                    app:textfont="r" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10ssp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.mw.eleven11.customView.RobotoRegularTextView
                    android:id="@+id/ctv_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:text="IND"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="visible"
                    app:rd_enable="false"
                    app:textfont="b" />

                <com.mw.eleven11.customView.CustomImageView
                    android:id="@+id/iv_team_2"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:background="@drawable/rounded_square_count"
                    android:layout_gravity="center_vertical"
                    app:actualImageScaleType="fitCenter"
                    app:failureImageScaleType="fitCenter"
                    app:placeholderImageScaleType="fitCenter" />


            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header_background_home_page"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_4sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_8sdp"
            android:paddingBottom="@dimen/_2sdp">


            <com.mw.eleven11.customView.RobotoRegularTextView
                android:id="@+id/contest_joined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contest_joined"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                app:textfont="r" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/LinearLayoutMegaInfoRoot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"
            android:background="@color/header_background_home_page"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_4sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingRight="@dimen/_8sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:visibility="gone">

            <com.mw.eleven11.customView.RobotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_6sdp"
                android:background="@drawable/bg_mega_green"
                android:includeFontPadding="false"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingTop="@dimen/_1sdp"
                android:paddingRight="@dimen/_4sdp"
                android:paddingBottom="@dimen/_1sdp"
                android:text="MEGA"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:textStyle="normal"
                app:textfont="r" />

            <com.mw.eleven11.customView.RobotoRegularTextView
                android:id="@+id/ctvMegaAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Cr"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                app:textfont="r" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <ImageView
                android:id="@+id/iv_tshirt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_t_shirt"
                android:layout_marginEnd="@dimen/_2sdp"
                android:visibility="gone"
                tools:ignore="VectorDrawableCompat" />


            <com.mw.eleven11.customView.RobotoRegularTextView
                android:id="@+id/ctv_VS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lable_lineups_out"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="@dimen/_10ssp"
                android:textStyle="normal"
                app:textfont="r" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bluredRel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3FFFFFF"
        android:visibility="visible" />

</android.support.v7.widget.CardView>