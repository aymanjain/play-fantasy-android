<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingRight="@dimen/_8sdp"
            android:paddingBottom="@dimen/_4sdp">


            <com.mw.eleven11.customView.CustomImageView
                android:id="@+id/sdv"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                app:actualImageScaleType="fitCenter"
                app:failureImage="@drawable/player"
                app:failureImageScaleType="fitCenter"
                app:placeholderImage="@drawable/player"
                app:placeholderImageScaleType="fitCenter" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_toStartOf="@+id/ctv_credits"
                android:layout_toLeftOf="@+id/ctv_credits"
                android:layout_toEndOf="@+id/sdv"
                android:layout_toRightOf="@+id/sdv"

                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.mw.eleven11.customView.CustomTextView
                        android:id="@+id/ctv_player_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/secondary_txt_size"
                        app:textfont="r" />

                    <LinearLayout
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_player"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            app:srcCompat="@drawable/ic_check_mark_new" />

                        <ImageView
                            android:id="@+id/iv_top_player"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_marginLeft="@dimen/_8sdp"
                            app:srcCompat="@drawable/ic_star_new" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:orientation="vertical">

                        <com.mw.eleven11.customView.CustomTextView

                            android:id="@+id/ctv_selected_by"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:text="68.2%"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/secondary_txt_size"
                            app:textfont="r" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.mw.eleven11.customView.CustomTextView
                            android:id="@+id/points"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textAlignment="textEnd"
                            android:textColor="@color/primary_text"
                            android:textSize="@dimen/secondary_txt_size"
                            app:textfont="@string/MONTSERRAT_REGULAR" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/greyDarkBg" />

    </LinearLayout>


</android.support.v7.widget.CardView>