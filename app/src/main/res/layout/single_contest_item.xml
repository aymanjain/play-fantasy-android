<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hi_main_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_1sdp"
    android:layout_marginLeft="@dimen/_1sdp"
    android:layout_marginRight="@dimen/_1sdp"
    android:layout_marginBottom="@dimen/_1sdp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardMaxElevation="@dimen/_1ssp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingTop="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.mw.eleven11.customView.RobotoRegularTextView
                    android:id="@+id/total_winnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_pool"
                    android:textColor="@color/black"
                    android:textSize="@dimen/secondary_txt_size"
                    app:textAllCaps="true"
                    app:textfont="r" />

                <com.mw.eleven11.customView.RobotoRegularTextView
                    android:id="@+id/total_winnings_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/secondary_txt_size"
                    app:textfont="r"
                    tools:text="15 Lakhs" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:orientation="vertical">

                <com.mw.eleven11.customView.RobotoRegularTextView
                    android:id="@+id/winners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/winners"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    app:textfont="r" />

                <com.mw.eleven11.customView.RobotoRegularTextView
                    android:id="@+id/winners_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryLight"
                    android:drawablePadding="@dimen/_8sdp"
                    android:drawableTint="@color/primary_text"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingLeft="@dimen/_10ssp"
                    android:paddingRight="@dimen/_10ssp"
                    android:text="6000"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/_10ssp"
                    app:drawableRightCompat="@drawable/ic_down_arrow"
                    app:textfont="r" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:visibility="gone"
                android:orientation="vertical">

                <com.mw.eleven11.customView.RobotoRegularTextView
                    android:id="@+id/entry_fees"
                    android:layout_width="@dimen/dimen_60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/entry_fee"
                    android:textAlignment="center"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/secondary_txt_size"
                    app:textfont="r" />

                <com.mw.eleven11.customView.RobotoRegularTextView
                    android:id="@+id/entry_fee_amount"
                    android:layout_width="@dimen/dimen_60dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/primary_txt_size"
                    app:textfont="r"
                    tools:text="499" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.mw.eleven11.customView.RobotoRegularTextView
                    android:id="@+id/entry_fee"
                    android:layout_width="@dimen/dimen_60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/entry_fee"
                    android:textAlignment="textEnd"
                    android:visibility="visible"
                    android:layout_marginRight="@dimen/_60sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/secondary_txt_size"
                    app:textfont="r" />

                <com.mw.eleven11.customView.RobotoRegularTextView
                    android:id="@+id/joinButton"
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="@drawable/bg_join_bankground"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_4sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingRight="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/joinCaps"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/secondary_txt_size"
                    app:textfont="sb" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/seekBar"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="10dp"
                    android:minHeight="10dp"
                    android:progressDrawable="@drawable/seekbar_drawable"
                    android:thumb="@color/transparent" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.mw.eleven11.customView.RobotoRegularTextView
                        android:id="@+id/spotLeftCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:text="Only 81,4232 spots left"
                        android:textColor="@color/red"
                        android:textSize="@dimen/secondary_txt_size"
                        app:textfont="r" />

                    <com.mw.eleven11.customView.RobotoRegularTextView
                        android:id="@+id/teamsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:text="1,33,333 spots"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/secondary_txt_size"
                        app:textfont="r" />
                </RelativeLayout>

            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:gravity="right"
                android:orientation="vertical">

                <com.mw.eleven11.customView.CustomTextView
                    android:id="@+id/joinButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_join_bankground"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_4sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingRight="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/joinCaps"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/secondary_txt_size"
                    app:textfont="sb" />

            </LinearLayout>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/header_background_home_page"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp">


            <com.mw.eleven11.customView.RobotoRegularTextView
                android:paddingBottom="@dimen/_4sdp"
                android:paddingTop="@dimen/_4sdp"
                android:id="@+id/firstPrize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_7sdp"
                android:drawablePadding="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:maxWidth="@dimen/_100sdp"
                android:text="Guaranteed"
                android:textColor="@color/white"
                android:textSize="@dimen/secondary_txt_size6"
                app:drawableLeftCompat="@drawable/ic_ist_contest"
                app:textfont="r" />


            <LinearLayout
                android:id="@+id/multiRoot"
                android:paddingBottom="@dimen/_4sdp"
                android:paddingTop="@dimen/_4sdp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_7sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.mw.eleven11.customView.RobotoRegularTextView
                    android:id="@+id/multiIndicator"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:background="@drawable/bg_multi"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="M"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_8ssp"
                    app:textfont="sb" />


                <com.mw.eleven11.customView.RobotoRegularTextView
                    android:id="@+id/multi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Upto 6"
                    android:textColor="@color/white"
                    android:textSize="@dimen/secondary_txt_size6"
                    app:textfont="r" />

            </LinearLayout>


            <LinearLayout
                android:paddingBottom="@dimen/_4sdp"
                android:paddingTop="@dimen/_4sdp"
                android:id="@+id/bonus_infoRoot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="@dimen/_7sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.mw.eleven11.customView.RobotoRegularTextView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:background="@drawable/bg_multi"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="B"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10ssp"
                    app:textfont="sb" />


                <com.mw.eleven11.customView.RobotoRegularTextView
                    android:id="@+id/bonus_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Upto 6"
                    android:textColor="@color/white"
                    android:textSize="@dimen/secondary_txt_size6"
                    app:textfont="r" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bonus_inforoot_percantage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginRight="@dimen/_7sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:paddingTop="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <com.mw.eleven11.customView.RobotoRegularTextView
                    android:id="@+id/tv_info_percantage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="0%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/secondary_txt_size6"
                    app:drawableLeftCompat="@drawable/ic_new_contest_troppy"
                    android:drawablePadding="2dp"
                    app:textfont="r" />

            </LinearLayout>



            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                android:layout_weight="1" />


            <com.mw.eleven11.customView.RobotoRegularTextView
                android:paddingBottom="@dimen/_4sdp"
                android:paddingTop="@dimen/_4sdp"
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:layout_marginEnd="@dimen/_4sdp"
                android:text="G"
                android:textColor="@color/white"
                android:textSize="@dimen/secondary_txt_size6"
                app:drawableLeftCompat="@drawable/ic_green_guranteed"
                app:textfont="r" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>